{
  "name": "global-business-hub-backend",
  "version": "1.0.0",
  "description": "글로벌 비즈니스 통합 허브 백엔드 API",
  "main": "dist/index.js",
  "engines": {
    "node": "20.x",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "db:init": "psql -U postgres -c \"CREATE DATABASE global_business_hub;\" || echo 'Database may already exist'",
    "db:schema": "psql -U postgres -d global_business_hub -f src/db/schema.sql",
    "db:setup": "npm run db:init && npm run db:schema",
    "backfill": "tsx src/scripts/backfill.ts",
    "backfill:90d": "tsx src/scripts/backfill.ts $(date -d '90 days ago' '+%Y-%m-%d') $(date -d 'yesterday' '+%Y-%m-%d')",
    "aggregation:manual": "tsx -e \"require('./src/jobs/dailyAggregation').runDailyAggregation()\""
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "@langchain/core": "^0.3.0",
    "@langchain/openai": "^0.3.0",
    "axios": "^1.6.2",
    "date-fns": "^3.6.0",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "csv-parse": "^5.5.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "googleapis": "^128.0.0",
    "langchain": "^0.3.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.16",
    "@notionhq/client": "^2.2.15",
    "openai": "^4.104.0",
    "pg": "^8.11.3",
    "resend": "^4.0.0",
    "simple-statistics": "^7.8.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.35",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.10.9",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
